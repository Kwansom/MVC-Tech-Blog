<div class="container row">
  <div class="comments">
    {{#each this}}
      <div class="card post comment-box">
        <div class="card-body post-body">
          <div class="card-text comment-body">
            {{comment.content}}
          </div>
          <div class="comment-author">
            -{{user.username}},
            {{created_at}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>