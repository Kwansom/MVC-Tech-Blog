<h1 id="user-dash">{{user.username}}'s Dashboard</h1>
<div class="center-btn-wrapper"><a href="/dashboard/new">
    <h3 id="create-dash">Create a New Post</h3></a></div>

{{#if posts}}
  <ul>
    {{#each posts}}
      <li>
        <a href="/dashboard/post/{{this.id}}"><h2
            id="post-title"
          >{{this.title}}</h2></a>
        -
        {{format_date this.createdAt}}
        <a href="/dashboard/edit/{{this.id}}"><button
            type="button"
            id="edit-post-btn"
          >Edit</button></a>
        |
        <button
          type="button"
          id="delete-post-btn"
          name="{{this.id}}"
        >Delete</button>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No posts yet!</p>
{{/if}}

<script src="/js/deletepost.js"></script>